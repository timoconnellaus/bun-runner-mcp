# Bun Sandbox Environment Variables

# Container Configuration
CONTAINER_NAME=bun-sandbox
IMAGE_NAME=bun-sandbox

# Port Configuration
PROXY_PORT=9998
CONTROL_PORT=9999

# Resource Limits
MEMORY_LIMIT=256m
CPU_LIMIT=0.5
PIDS_LIMIT=50

# Security Settings
ENABLE_SECCOMP=true
READONLY_ROOTFS=true

# Execution Limits (used by the sandbox runtime)
MAX_EXECUTION_TIME=10000  # milliseconds
MAX_MEMORY_PER_EXECUTION=128  # MB
MAX_OUTPUT_SIZE=1048576  # bytes (1MB)

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# Network (optional - for custom networking)
# DOCKER_NETWORK=sandbox-net
# SUBNET=172.28.0.0/16

# Development Settings
NODE_ENV=production
BUN_RUNTIME_TRANSPILER_CACHE_PATH=/tmp/.bun-cache
