{
  "name": "bun-runner-mcp",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "bun build ./src/mcp/server.ts --outdir ./dist --target bun",
    "start": "bun run ./src/mcp/server.ts",
    "dev": "bun --watch ./src/mcp/server.ts",
    "test": "bun test",
    "test:unit": "bun test src/",
    "test:e2e": "bun test test/e2e",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
